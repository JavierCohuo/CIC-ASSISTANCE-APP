<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

        <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            >

            <!-- Actividad principal -->
            <activity
                android:name=".MainActivity"
                android:exported="true">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>

            <!-- Actividad pantalla_principal -->
            <activity android:name=".pantalla_principal" />

            <!-- Nueva actividad solicitar_servicio_tecnico -->
            <activity android:name=".solicitar_servicio_tecnico" />

            <!-- Nueva actividad status_de_la_solicitud -->
            <activity android:name=".status_de_la_solicitud" />

            <!-- Nueva actividad vales -->
            <activity android:name=".vales" />

        </application>

    </manifest>

